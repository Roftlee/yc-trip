<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.role.RoleElementDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.role.RoleElementDomain" id="RoleElementMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 角色Id -->
        <result property="roleId" column="role_id" />
        <!-- 权限Id -->
        <result property="elementId" column="element_id" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增角色权限信息 -->
    <insert id="addRoleElement" parameterType="com.yc.trip.api.business.bo.role.RoleElementDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `role_element`(
            role_id,
            element_id)
        VALUES(
            #{roleId,jdbcType=NUMERIC},
            #{elementId,jdbcType=NUMERIC}
        )	
    </insert>
	
    <!-- 修改角色权限信息 -->
	<update id="updateRoleElement" parameterType="com.yc.trip.api.business.bo.role.RoleElementDomain">
        UPDATE `role_element`
        <set>
            <if test="roleId!=null ">
            role_id=#{roleId,jdbcType=NUMERIC},
            </if>
            <if test="elementId!=null ">
            element_id=#{elementId,jdbcType=NUMERIC},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询角色权限信息 -->
	<select id="getRoleElement" parameterType="com.yc.trip.api.business.bo.role.RoleElementDomain" resultMap="RoleElementMap">
        SELECT id,role_id,element_id,created_time,
           updated_time
        FROM `role_element`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="roleId!=null ">
                and role_id=#{roleId,jdbcType=NUMERIC}
            </if>
            <if test="elementId!=null ">
                and element_id=#{elementId,jdbcType=NUMERIC}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询角色权限信息列表 -->
    <select id="queryRoleElementList" parameterType="com.yc.trip.api.business.bo.role.RoleElementDomain" resultMap="RoleElementMap">
            SELECT t.id,t.role_id,t.element_id,t.created_time,
            t.updated_time
            FROM `role_element` t 
        <where>
            <if test="roleId!=null ">
                AND role_id=#{roleId,jdbcType=NUMERIC}
            </if>
            <if test="elementId!=null ">
                AND element_id=#{elementId,jdbcType=NUMERIC}
            </if>
