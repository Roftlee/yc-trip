<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.purchase.PurchaseRecordDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.purchase.PurchaseRecordDomain" id="PurchaseRecordMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 角色Id -->
        <result property="roleId" column="role_id" />
        <!-- 业务主键Id -->
        <result property="businessId" column="business_id" />
        <!-- 购买时长 -->
        <result property="totalDays" column="total_days" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增服务购买信息 -->
    <insert id="addPurchaseRecord" parameterType="com.yc.trip.api.business.bo.purchase.PurchaseRecordDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `purchase_record`(
            role_id,
            business_id,
            total_days)
        VALUES(
            #{roleId,jdbcType=NUMERIC},
            #{businessId,jdbcType=NUMERIC},
            #{totalDays,jdbcType=NUMERIC}
        )	
    </insert>
	
    <!-- 修改服务购买信息 -->
	<update id="updatePurchaseRecord" parameterType="com.yc.trip.api.business.bo.purchase.PurchaseRecordDomain">
        UPDATE `purchase_record`
        <set>
            <if test="roleId!=null ">
            role_id=#{roleId,jdbcType=NUMERIC},
            </if>
            <if test="businessId!=null ">
            business_id=#{businessId,jdbcType=NUMERIC},
            </if>
            <if test="totalDays!=null ">
            total_days=#{totalDays,jdbcType=NUMERIC},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询服务购买信息 -->
	<select id="getPurchaseRecord" parameterType="com.yc.trip.api.business.bo.purchase.PurchaseRecordDomain" resultMap="PurchaseRecordMap">
        SELECT id,role_id,business_id,total_days,
           created_time,updated_time
        FROM `purchase_record`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="roleId!=null ">
                and role_id=#{roleId,jdbcType=NUMERIC}
            </if>
            <if test="businessId!=null ">
                and business_id=#{businessId,jdbcType=NUMERIC}
            </if>
            <if test="totalDays!=null ">
                and total_days=#{totalDays,jdbcType=NUMERIC}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询服务购买信息列表 -->
    <select id="queryPurchaseRecordList" parameterType="com.yc.trip.api.business.bo.purchase.PurchaseRecordDomain" resultMap="PurchaseRecordMap">
            SELECT t.id,t.role_id,t.business_id,t.total_days,
            t.created_time,t.updated_time
            FROM `purchase_record` t 
        <where>
            <if test="roleId!=null ">
                AND role_id=#{roleId,jdbcType=NUMERIC}
            </if>
            <if test="businessId!=null ">
                AND business_id=#{businessId,jdbcType=NUMERIC}
            </if>
            <if test="totalDays!=null ">
                AND total_days=#{totalDays,jdbcType=NUMERIC}
            </if>
            <if test="keywords!=null and keywords!='' ">
                AND (
                 )
            </if>
            <if test="ids!=null and ids.size!=0 ">
                AND id IN
                    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
                        #{item}
                    </foreach>
            </if>
        </where>	
    </select>
	
</mapper>
