<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.user.UserPasswordDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.user.UserPasswordDomain" id="UserPasswordMap">
        <!-- id -->
        <result property="id" column="id" />
        <!-- 用户Id -->
        <result property="userId" column="user_id" />
        <!-- 盐值 -->
        <result property="salt" column="salt" />
        <!-- 密码 -->
        <result property="password" column="password" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增用户密码 -->
    <insert id="addUserPassword" parameterType="com.yc.trip.api.business.bo.user.UserPasswordDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user_password`(
            user_id,
            salt,
            password)
        VALUES(
            #{userId,jdbcType=NUMERIC},
            #{salt,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR}
        )	
    </insert>
	
    <!-- 修改用户密码 -->
	<update id="updateUserPassword" parameterType="com.yc.trip.api.business.bo.user.UserPasswordDomain">
        UPDATE `user_password`
        <set>
            <if test="userId!=null ">
            user_id=#{userId,jdbcType=NUMERIC},
            </if>
            <if test="salt!=null and salt!='' ">
            salt=#{salt,jdbcType=VARCHAR},
            </if>
            <if test="password!=null and password!='' ">
            password=#{password,jdbcType=VARCHAR},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询用户密码 -->
	<select id="getUserPassword" parameterType="com.yc.trip.api.business.bo.user.UserPasswordDomain" resultMap="UserPasswordMap">
        SELECT id,user_id,salt,password,
           created_time,updated_time
        FROM `user_password`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="userId!=null ">
                and user_id=#{userId,jdbcType=NUMERIC}
            </if>
            <if test="salt!=null and salt!='' ">
                and salt=#{salt,jdbcType=VARCHAR}
            </if>
            <if test="password!=null and password!='' ">
                and password=#{password,jdbcType=VARCHAR}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询用户密码列表 -->
    <select id="queryUserPasswordList" parameterType="com.yc.trip.api.business.bo.user.UserPasswordDomain" resultMap="UserPasswordMap">
            SELECT t.id,t.user_id,t.salt,t.password,
            t.created_time,t.updated_time
            FROM `user_password` t 
        <where>
            <if test="userId!=null ">
                AND user_id=#{userId,jdbcType=NUMERIC}
            </if>
            <if test="salt!=null and salt!='' ">
                AND salt=#{salt,jdbcType=VARCHAR}
            </if>
            <if test="password!=null and password!='' ">
                AND password=#{password,jdbcType=VARCHAR}
            </if>
            <if test="keywords!=null and keywords!='' ">
                AND (
                     salt LIKE CONCAT('%', #{keywords}, '%')
                     OR password LIKE CONCAT('%', #{keywords}, '%')
                 )
            </if>
            <if test="ids!=null and ids.size!=0 ">
                AND id IN
                    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
                        #{item}
                    </foreach>
            </if>
        </where>	
    </select>
	
</mapper>
