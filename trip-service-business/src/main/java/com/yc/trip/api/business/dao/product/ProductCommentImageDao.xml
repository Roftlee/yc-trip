<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.product.ProductCommentImageDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.product.ProductCommentImageDomain" id="ProductCommentImageMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 点评记录Id -->
        <result property="commentId" column="comment_id" />
        <!-- 图片链接 -->
        <result property="imageUrl" column="image_url" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增产品评论图片信息 -->
    <insert id="addProductCommentImage" parameterType="com.yc.trip.api.business.bo.product.ProductCommentImageDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `product_comment_image`(
            comment_id,
            image_url)
        VALUES(
            #{commentId,jdbcType=NUMERIC},
            #{imageUrl,jdbcType=VARCHAR}
        )	
    </insert>
	
    <!-- 修改产品评论图片信息 -->
	<update id="updateProductCommentImage" parameterType="com.yc.trip.api.business.bo.product.ProductCommentImageDomain">
        UPDATE `product_comment_image`
        <set>
            <if test="commentId!=null ">
            comment_id=#{commentId,jdbcType=NUMERIC},
            </if>
            <if test="imageUrl!=null and imageUrl!='' ">
            image_url=#{imageUrl,jdbcType=VARCHAR},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询产品评论图片信息 -->
	<select id="getProductCommentImage" parameterType="com.yc.trip.api.business.bo.product.ProductCommentImageDomain" resultMap="ProductCommentImageMap">
        SELECT id,comment_id,image_url,created_time,
           updated_time
        FROM `product_comment_image`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="commentId!=null ">
                and comment_id=#{commentId,jdbcType=NUMERIC}
            </if>
            <if test="imageUrl!=null and imageUrl!='' ">
                and image_url=#{imageUrl,jdbcType=VARCHAR}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询产品评论图片信息列表 -->
    <select id="queryProductCommentImageList" parameterType="com.yc.trip.api.business.bo.product.ProductCommentImageDomain" resultMap="ProductCommentImageMap">
            SELECT t.id,t.comment_id,t.image_url,t.created_time,
            t.updated_time
            FROM `product_comment_image` t 
        <where>
            <if test="commentId!=null ">
                AND comment_id=#{commentId,jdbcType=NUMERIC}
            </if>
            <if test="imageUrl!=null and imageUrl!='' ">
                AND image_url=#{imageUrl,jdbcType=VARCHAR}
            </if>
            <if test="keywords!=null and keywords!='' ">
                AND (
                     image_url LIKE CONCAT('%', #{keywords}, '%')
                 )
            </if>
            <if test="ids!=null and ids.size!=0 ">
                AND id IN
                    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
                        #{item}
                    </foreach>
            </if>
        </where>	
    </select>
	
</mapper>
