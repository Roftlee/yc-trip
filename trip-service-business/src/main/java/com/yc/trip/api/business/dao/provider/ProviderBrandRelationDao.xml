<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.provider.ProviderBrandRelationDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.provider.ProviderBrandRelationDomain" id="ProviderBrandRelationMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 供应商Id -->
        <result property="providerId" column="provider_id" />
        <!-- 品牌Id -->
        <result property="brandId" column="brand_id" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增供应商品牌关联信息 -->
    <insert id="addProviderBrandRelation" parameterType="com.yc.trip.api.business.bo.provider.ProviderBrandRelationDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `provider_brand_relation`(
            provider_id,
            brand_id)
        VALUES(
            #{providerId,jdbcType=NUMERIC},
            #{brandId,jdbcType=NUMERIC}
        )	
    </insert>
	
    <!-- 修改供应商品牌关联信息 -->
	<update id="updateProviderBrandRelation" parameterType="com.yc.trip.api.business.bo.provider.ProviderBrandRelationDomain">
        UPDATE `provider_brand_relation`
        <set>
            <if test="providerId!=null ">
            provider_id=#{providerId,jdbcType=NUMERIC},
            </if>
            <if test="brandId!=null ">
            brand_id=#{brandId,jdbcType=NUMERIC},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询供应商品牌关联信息 -->
	<select id="getProviderBrandRelation" parameterType="com.yc.trip.api.business.bo.provider.ProviderBrandRelationDomain" resultMap="ProviderBrandRelationMap">
        SELECT id,provider_id,brand_id,created_time,
           updated_time
        FROM `provider_brand_relation`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="providerId!=null ">
                and provider_id=#{providerId,jdbcType=NUMERIC}
            </if>
            <if test="brandId!=null ">
                and brand_id=#{brandId,jdbcType=NUMERIC}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询供应商品牌关联信息列表 -->
    <select id="queryProviderBrandRelationList" parameterType="com.yc.trip.api.business.bo.provider.ProviderBrandRelationDomain" resultMap="ProviderBrandRelationMap">
            SELECT t.id,t.provider_id,t.brand_id,t.created_time,
            t.updated_time
            FROM `provider_brand_relation` t 
        <where>
            <if test="providerId!=null ">
                AND provider_id=#{providerId,jdbcType=NUMERIC}
            </if>
            <if test="brandId!=null ">
