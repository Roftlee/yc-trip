<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yc.trip.api.business.dao.visa.VisaAttachmentDao">

    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.visa.VisaAttachmentDomain" id="VisaAttachmentMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 签证Id -->
        <result property="visaId" column="visa_id" />
        <!-- 文件链接 -->
        <result property="fileUrl" column="file_url" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增签证附件信息 -->
    <insert id="addVisaAttachment" parameterType="com.yc.trip.api.business.bo.visa.VisaAttachmentDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `visa_attachment`(
            visa_id,
            file_url)
        VALUES(
            #{visaId,jdbcType=NUMERIC},
            #{fileUrl,jdbcType=VARCHAR}
        )	
    </insert>
	
    <!-- 修改签证附件信息 -->
	<update id="updateVisaAttachment" parameterType="com.yc.trip.api.business.bo.visa.VisaAttachmentDomain">
        UPDATE `visa_attachment`
        <set>
            <if test="visaId!=null ">
            visa_id=#{visaId,jdbcType=NUMERIC},
            </if>
            <if test="fileUrl!=null and fileUrl!='' ">
            file_url=#{fileUrl,jdbcType=VARCHAR},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询签证附件信息 -->
	<select id="getVisaAttachment" parameterType="com.yc.trip.api.business.bo.visa.VisaAttachmentDomain" resultMap="VisaAttachmentMap">
        SELECT id,visa_id,file_url,created_time,
           updated_time
        FROM `visa_attachment`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="visaId!=null ">
                and visa_id=#{visaId,jdbcType=NUMERIC}
            </if>
            <if test="fileUrl!=null and fileUrl!='' ">
                and file_url=#{fileUrl,jdbcType=VARCHAR}
            </if>
        </where>
        LIMIT 2	
	</select>
	
    <!-- 查询签证附件信息列表 -->
    <select id="queryVisaAttachmentList" parameterType="com.yc.trip.api.business.bo.visa.VisaAttachmentDomain" resultMap="VisaAttachmentMap">
            SELECT t.id,t.visa_id,t.file_url,t.created_time,
            t.updated_time
            FROM `visa_attachment` t 
        <where>
            <if test="visaId!=null ">
                AND visa_id=#{visaId,jdbcType=NUMERIC}
            </if>
            <if test="fileUrl!=null and fileUrl!='' ">
                AND file_url=#{fileUrl,jdbcType=VARCHAR}
            </if>
            <if test="keywords!=null and keywords!='' ">
                AND (
                     file_url LIKE CONCAT('%', #{keywords}, '%')
                 )
            </if>
            <if test="ids!=null and ids.size!=0 ">
                AND id IN
                    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
                        #{item}
                    </foreach>
            </if>
        </where>	
    </select>
	
</mapper>
