    <!-- 对象与字段映射 -->
    <resultMap type="com.yc.trip.api.business.bo.user.UserRoleDomain" id="UserRoleMap">
        <!--  -->
        <result property="id" column="id" />
        <!-- 用户Id -->
        <result property="userId" column="user_id" />
        <!-- 角色Id -->
        <result property="roleId" column="role_id" />
        <!-- 创建时间 -->
        <result property="createdTime" column="created_time" />
        <!-- 更新时间 -->
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <!-- 新增用户角色信息 -->
    <insert id="addUserRole" parameterType="com.yc.trip.api.business.bo.user.UserRoleDomain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user_role`(
            user_id,
            role_id)
        VALUES(
            #{userId,jdbcType=NUMERIC},
            #{roleId,jdbcType=NUMERIC}
        )	
    </insert>
	
    <!-- 修改用户角色信息 -->
	<update id="updateUserRole" parameterType="com.yc.trip.api.business.bo.user.UserRoleDomain">
        UPDATE `user_role`
        <set>
            <if test="userId!=null ">
            user_id=#{userId,jdbcType=NUMERIC},
            </if>
            <if test="roleId!=null ">
            role_id=#{roleId,jdbcType=NUMERIC},
            </if>
            <if test="createdTime!=null ">
            created_time=#{createdTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updatedTime!=null ">
            updated_time=#{updatedTime,jdbcType=TIMESTAMP},
            </if>
        </set>
            WHERE id=#{id,jdbcType=NUMERIC}	
	</update>
	
    <!-- 查询用户角色信息 -->
	<select id="getUserRole" parameterType="com.yc.trip.api.business.bo.user.UserRoleDomain" resultMap="UserRoleMap">
        SELECT id,user_id,role_id,created_time,
           updated_time
        FROM `user_role`
        <where>
            <if test="id!=null ">
                and id=#{id,jdbcType=NUMERIC}
            </if>
            <if test="userId!=null ">
                and user_id=#{userId,jdbcType=NUMERIC}
            </if>
            <if test="roleId!=null ">
                and role_id=#{roleId,jdbcType=NUMERIC}
            </if>
        </where>
        LIMIT 2	
	</select>
	
